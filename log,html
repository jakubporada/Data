/* ManTech Login Page - Additional CSS for Angular Integration */

/* CSS Custom Properties for ManTech Brand Colors */
:root {
  --mantech-primary: #003366;
  --mantech-secondary: #0066cc;
  --mantech-accent: #28a745;
  --mantech-gray-light: #f8f9fa;
  --mantech-gray-dark: #6c757d;
  --mantech-success: #28a745;
  --mantech-warning: #ffc107;
  --mantech-danger: #dc3545;
  --mantech-info: #17a2b8;
}

/* Angular Component Specific Styles */
.mantech-login-container {
  min-height: 100vh;
  background: linear-gradient(135deg, var(--mantech-primary) 0%, var(--mantech-secondary) 100%);
  font-family: 'Inter', system-ui, sans-serif;
}

/* Form Validation States for Angular Reactive Forms */
.ng-invalid.ng-touched {
  border-color: var(--mantech-danger) !important;
  box-shadow: 0 0 0 2px rgba(220, 53, 69, 0.2) !important;
}

.ng-valid.ng-touched {
  border-color: var(--mantech-success) !important;
  box-shadow: 0 0 0 2px rgba(40, 167, 69, 0.2) !important;
}

/* Error Message Styles */
.error-message {
  color: var(--mantech-danger);
  font-size: 0.875rem;
  margin-top: 0.5rem;
  display: flex;
  align-items: center;
  animation: slideDown 0.3s ease-out;
}

.error-message i {
  margin-right: 0.5rem;
}

@keyframes slideDown {
  from {
    opacity: 0;
    transform: translateY(-10px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* Success Message Styles */
.success-message {
  color: var(--mantech-success);
  font-size: 0.875rem;
  margin-top: 0.5rem;
  display: flex;
  align-items: center;
  animation: slideDown 0.3s ease-out;
}

/* Loading States */
.btn-loading {
  position: relative;
  pointer-events: none;
  opacity: 0.8;
}

.btn-loading::after {
  content: '';
  position: absolute;
  width: 16px;
  height: 16px;
  margin: auto;
  border: 2px solid transparent;
  border-top-color: #ffffff;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* Responsive Design Enhancements */
@media (max-width: 768px) {
  .mantech-login-container {
    padding: 1rem;
  }
  
  .login-form-container {
    padding: 1.5rem;
    margin: 0;
  }
  
  .floating-shapes {
    display: none; /* Hide floating shapes on mobile for performance */
  }
}

@media (max-width: 480px) {
  .login-form-container {
    padding: 1rem;
  }
  
  .mantech-logo {
    width: 3rem;
    height: 3rem;
  }
  
  .sso-buttons {
    grid-template-columns: 1fr; /* Stack SSO buttons on very small screens */
    gap: 0.75rem;
  }
}

/* High Contrast Mode Support */
@media (prefers-contrast: high) {
  .glass-effect {
    background: rgba(255, 255, 255, 1);
    border: 2px solid var(--mantech-primary);
  }
  
  .login-gradient {
    background: var(--mantech-primary);
  }
}

/* Reduced Motion Support */
@media (prefers-reduced-motion: reduce) {
  .animate-fade-in,
  .animate-slide-up,
  .animate-pulse-subtle,
  .floating-shapes,
  .shape {
    animation: none;
  }
  
  .input-focus:focus,
  .login-button:hover {
    transform: none;
  }
}

/* Dark Mode Support (if needed) */
@media (prefers-color-scheme: dark) {
  .glass-effect {
    background: rgba(30, 30, 30, 0.95);
    color: #ffffff;
  }
  
  .glass-effect input {
    background: rgba(255, 255, 255, 0.1);
    color: #ffffff;
    border-color: rgba(255, 255, 255, 0.3);
  }
  
  .glass-effect input::placeholder {
    color: rgba(255, 255, 255, 0.6);
  }
}

/* Print Styles (hide unnecessary elements when printing) */
@media print {
  .floating-shapes,
  .security-badge,
  .sso-buttons {
    display: none;
  }
  
  .mantech-login-container {
    background: white;
    color: black;
  }
}

/* Focus Visible for Better Accessibility */
*:focus-visible {
  outline: 2px solid var(--mantech-secondary);
  outline-offset: 2px;
}

